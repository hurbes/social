{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "tsconfig.json"

  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "auth": {
      "type": "application",
      "root": "apps/auth",
      "entryFile": "main",
      "sourceRoot": "apps/auth/src",
      "compilerOptions": {
        "tsConfigPath": "apps/auth/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "posts": {
      "type": "application",
      "root": "apps/posts",
      "entryFile": "main",
      "sourceRoot": "apps/posts/src",
      "compilerOptions": {
        "tsConfigPath": "apps/posts/tsconfig.app.json"
      }
    },
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json"
      }
    },
 
  
    "cleaner": {
      "type": "application",
      "root": "apps/cleaner",
      "entryFile": "main",
      "sourceRoot": "apps/cleaner/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cleaner/tsconfig.app.json"
      }
    },
    "counter": {
      "type": "application",
      "root": "apps/counter",
      "entryFile": "main",
      "sourceRoot": "apps/counter/src",
      "compilerOptions": {
        "tsConfigPath": "apps/counter/tsconfig.app.json"
      }
    },
    "chat": {
      "type": "application",
      "root": "apps/chat",
      "entryFile": "main",
      "sourceRoot": "apps/chat/src",
      "compilerOptions": {
        "tsConfigPath": "apps/chat/tsconfig.app.json"
      }
    },
    "dto": {
      "type": "library",
      "root": "libs/dto",
      "entryFile": "index",
      "sourceRoot": "libs/dto/src",
      "compilerOptions": {
        "tsConfigPath": "libs/dto/tsconfig.lib.json"
      }
    },
    "comment": {
      "type": "application",
      "root": "apps/comment",
      "entryFile": "main",
      "sourceRoot": "apps/comment/src",
      "compilerOptions": {
        "tsConfigPath": "apps/comment/tsconfig.app.json"
      }
    }
  }
}